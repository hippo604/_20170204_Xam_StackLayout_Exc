<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AbsoluteEx.AbsoluteEx">
    <ContentPage.Content>
        <AbsoluteLayout>
            <BoxView Color="LightGray" AbsoluteLayout.LayoutBounds="0,0,1,0.33" AbsoluteLayout.LayoutFlags="All"/>
            <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 0.33" AbsoluteLayout.LayoutFlags="All" VerticalOptions="Center">
                <Label Text="$11.95" FontSize="60" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Button Text="Add $7.99 Credit" BackgroundColor="#1695A3" FontSize="15" BorderRadius="15" FontAttributes="Bold" />
            </StackLayout>
            <BoxView Color="LightBlue" AbsoluteLayout.LayoutBounds="0,0.5,1,0.33" AbsoluteLayout.LayoutFlags="All"/>
            <StackLayout AbsoluteLayout.LayoutBounds="0, 0.5, 1, 0.33" AbsoluteLayout.LayoutFlags="All" VerticalOptions="Center">
                <Label Text="Why pay for credit?" FontSize="15" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label FontSize="13" HorizontalTextAlignment="Center">
Because you can reach people who aren't
on SkyApp by calling mobile and landline 
numbers, or spending SMS, at low-cost rates.</Label>
            </StackLayout>
        </AbsoluteLayout>

    </ContentPage.Content>
</ContentPage>